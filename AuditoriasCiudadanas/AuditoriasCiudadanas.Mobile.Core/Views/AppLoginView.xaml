<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ex="clr-namespace:Xamarin.Forms.ToolKit.Extensions;assembly=Xamarin.Forms.ToolKit.Extensions"
             x:Class="AuditoriasCiudadanas.Mobile.Core.Views.AppLoginView">

    <ContentPage.Resources>
        <StyleSheet Source="/Assets/Styles/AppLogin.css" />
    </ContentPage.Resources>

    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="BtnSignUp" Text="{ex:Translate Key=AppLogin_BtnSignUp}" Command="{Binding SignUpCommand}" />
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <StackLayout VerticalOptions="StartAndExpand">
            <Entry x:Name="EntryEmail" Placeholder="{ex:Translate Key=AppLogin_EntryEmail}" />
            <Entry x:Name="EntryPassword" IsPassword="true" Placeholder="{ex:Translate Key=AppLogin_EntryPassword}" />
            <Button x:Name="BtnLogIn" Text="{ex:Translate Key=AppLogin_BtnLogin}" Command="{Binding LogInCommand}" />
            <Button x:Name="BtnForgotPassword" Text="{ex:Translate Key=AppLogin_BtnForgotPassword}" Command="{Binding ForgotPasswordCommand}" />
        </StackLayout>
    </ContentPage.Content>

</ContentPage>